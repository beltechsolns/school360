<odoo>

    <record id="view_result_tree" model="ir.ui.view">
        <field name="name">exam.result.tree</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="exam_id"/>
                <field name="marks_obtained"/>
                <field name="grade"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <record id="view_result_form" model="ir.ui.view">
        <field name="name">exam.result.form</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="exam_id"/>
                        <field name="marks_obtained"/>
                        <field name="grade" readonly="1"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <record id="action_exam_result" model="ir.actions.act_window">
        <field name="name">Results</field>
        <field name="res_model">exam.result</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Exam Result!
            </p>
        </field>
    </record>

</odoo>