<odoo>

    <!-- Tree -->
    <record id="view_fees_tree" model="ir.ui.view">
        <field name="name">fees.tree</field>
        <field name="model">school360.fees</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="structure_id"/>
                <field name="total_amount"/>
                <field name="amount_paid"/>
                <field name="amount_due"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="view_fees_form" model="ir.ui.view">
        <field name="name">fees.form</field>
        <field name="model">school360.fees</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_set_open" type="object" string="Open" class="oe_highlight" invisible="state not in ('draft','cancel')"/>
                    <button name="action_set_paid" type="object" string="Mark Paid" class="oe_highlight" invisible="state not in ('draft','open')"/>
                    <button name="action_set_cancel" type="object" string="Cancel" class="oe_warning" invisible="state not in ('draft','open')"/>
                    <button name="action_set_draft" type="object" string="Reset to Draft" class="oe_default"/>
                </header>

                <sheet>

                    <!-- Smart Button -->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_fees_payment)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-money">
                            <field name="payment_ids" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="student_id"/>
                            <field name="structure_id"/>
                            <field name="total_amount"/>
                        </group>
                        <group>
                            <field name="amount_paid" readonly="1"/>
                            <field name="amount_due" readonly="1"/>
                            <field name="discount"/>
                            <field name="scholarship"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Payments">
                            <field name="payment_ids">
                                <list editable="bottom">
                                    <field name="payment_date"/>
                                    <field name="amount"/>
                                    <field name="payment_method"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fees" model="ir.actions.act_window">
        <field name="name">Student Fees</field>
        <field name="res_model">school360.fees</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>