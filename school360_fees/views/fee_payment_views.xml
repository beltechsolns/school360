<odoo>

    <record id="view_fees_payment_tree" model="ir.ui.view">
        <field name="name">fees.payment.tree</field>
        <field name="model">school360.fees.payment</field>
        <field name="arch" type="xml">
            <list>
                <field name="fee_id"/>
                <field name="payment_date"/>
                <field name="amount"/>
                <field name="payment_method"/>
            </list>
        </field>
    </record>

    <record id="view_fees_payment_form" model="ir.ui.view">
        <field name="name">fees.payment.form</field>
        <field name="model">school360.fees.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="fee_id"/>
                        <field name="payment_date"/>
                        <field name="amount"/>
                        <field name="payment_method"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_fees_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">school360.fees.payment</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>