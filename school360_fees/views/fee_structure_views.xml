<odoo>

    <!-- Tree -->
    <record id="view_fees_structure_tree" model="ir.ui.view">
        <field name="name">fees.structure.tree</field>
        <field name="model">school360.fees.structure</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="grade_id"/>
                <field name="amount"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="view_fees_structure_form" model="ir.ui.view">
        <field name="name">fees.structure.form</field>
        <field name="model">school360.fees.structure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="grade_id"/>
                        <field name="amount"/>
                        <field name="company_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fees_structure" model="ir.actions.act_window">
        <field name="name">Fee Structures</field>
        <field name="res_model">school360.fees.structure</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>