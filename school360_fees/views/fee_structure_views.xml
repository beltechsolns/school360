<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fees_structure_list" model="ir.ui.view">
        <field name="name">fees.structure.list</field>
        <field name="model">fees.structure</field>
        <field name="arch" type="xml">
            <list string="Fees">
                <field name="name"/>
                <field name="code"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_fees_structure_form" model="ir.ui.view">
        <field name="name">fees.structure.form</field>
        <field name="model">fees.structure</field>
        <field name="arch" type="xml">
            <form string="Fees">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Fee Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Tuition Fee"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_fees_structure_search" model="ir.ui.view">
        <field name="name">fees.structure.search</field>
        <field name="model">fees.structure</field>
        <field name="arch" type="xml">
            <search string="Search Fees">
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Company" name="group_by_company" domain="[]" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_fees_structure" model="ir.actions.act_window">
        <field name="name">Fees Structure</field>
        <field name="res_model">fees.structure</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Fee Structure!
            </p>
        </field>
    </record>

    <menuitem id="menu_fees_structure_root"
              name="Fees Structure"
              action="action_fees_structure"
              parent="menu_student_fees_root"
              sequence="20"/>

</odoo>