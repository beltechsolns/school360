<odoo>
    <!-- Tree View -->
    <record id="view_attendance_line_tree" model="ir.ui.view">
        <field name="name">attendance.line.tree</field>
        <field name="model">attendance.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="session_id"/>
                <field name="student_id"/>
                <field name="status"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_attendance_line_form" model="ir.ui.view">
        <field name="name">attendance.line.form</field>
        <field name="model">attendance.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="session_id"/>
                        <field name="student_id"/>
                        <field name="status"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_attendance_lines" model="ir.actions.act_window">
        <field name="name">Attendance Lines</field>
        <field name="res_model">attendance.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5,0,0),
            (0,0,{'view_mode':'list','view_id': ref('view_attendance_line_tree')}),
            (0,0,{'view_mode':'form','view_id': ref('view_attendance_line_form')})
        ]"/>
    </record>
</odoo>