<odoo>
    <data noupdate="1">
        <!-- Multi-company Rules -->
        <record id="rule_academic_grade_company" model="ir.rule">
            <field name="name">Academic Grade: Company Rule</field>
            <field name="model_id" ref="model_school360_academic_grade"/>
            <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        </record>

        <record id="rule_academic_section_company" model="ir.rule">
            <field name="name">Academic Section: Company Rule</field>
            <field name="model_id" ref="model_school360_academic_section"/>
            <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        </record>

        <record id="rule_academic_subject_company" model="ir.rule">
            <field name="name">Academic Subject: Company Rule</field>
            <field name="model_id" ref="model_school360_academic_subject"/>
            <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        </record>
    </data>
</odoo>