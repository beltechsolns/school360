<odoo>
    <record id="view_academic_subject_list" model="ir.ui.view">
        <field name="name">academic.subject.list</field>
        <field name="model">school360_academic.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="grade_id"/>
                <field name="credits"/>
            </list>
        </field>
    </record>

    <record id="action_academic_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school360_academic.subject</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>