<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_academic_subject_form" model="ir.ui.view">
        <field name="name">academic.subject.form</field>
        <field name="model">school360_academic.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="grade_id"/>
                        <field name="credits"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_academic_subject_list" model="ir.ui.view">
        <field name="name">academic.subject.list</field>
        <field name="model">school360_academic.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="grade_id"/>
                <field name="credits"/>
            </list>
        </field>
    </record>

    <record id="action_academic_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school360_academic.subject</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>