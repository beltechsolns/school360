<odoo>
    <record id="view_academic_term_list" model="ir.ui.view">
        <field name="name">academic.term.list</field>
        <field name="model">school360_academic.term</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="academic_year_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="action_academic_term" model="ir.actions.act_window">
        <field name="name">Academic Terms</field>
        <field name="res_model">school360_academic.term</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>