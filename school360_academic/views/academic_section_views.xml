<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_academic_section_form" model="ir.ui.view">
        <field name="name">academic.section.form</field>
        <field name="model">school360_academic.section</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="grade_id" domain="[('active','=',True)]"/>
                        </group>
                        <group>
                            <field name="class_teacher_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Students" name="students">
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="view_academic_section_list" model="ir.ui.view">
        <field name="name">academic.section.list</field>
        <field name="model">school360_academic.section</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="grade_id"/>
                <field name="class_teacher_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    <record id="action_academic_section" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="res_model">school360_academic.section</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>