<odoo>
    <data noupdate="1">
        <!-- Multi-Company Rules -->
        <record id="rule_academic_term_company" model="ir.rule">
            <field name="name">Academic Term: Company Isolation</field>
            <field name="model_id" ref="model_school360_academic_term"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_academic_grade_company" model="ir.rule">
            <field name="name">Academic Grade: Company Isolation</field>
            <field name="model_id" ref="model_school360_academic_grade"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_academic_section_company" model="ir.rule">
            <field name="name">Academic Section: Company Isolation</field>
            <field name="model_id" ref="model_school360_academic_section"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rule_academic_subject_company" model="ir.rule">
            <field name="name">Academic Subject: Company Isolation</field>
            <field name="model_id" ref="model_school360_academic_subject"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>