<odoo>
    <template id="portal_student_library" name="Student Library">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h3 class="mb-4 fw-bold" style="color: #0d6efd;">
                    Borrowed Books - <t t-esc="student.name"/>
                </h3>

                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-striped table-bordered table-hover align-middle">
                        <!-- Custom Light-Blue Header -->
                        <thead class="dashboard-table-header">
                            <tr>
                                <th>Book</th>
                                <th>Borrow Date</th>
                                <th>Due Date</th>
                                <th>Status</th>
                                <th>Fine (ETB)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="loans" t-as="loan">
                                <tr>
                                    <td><t t-esc="loan.book_copy_id.name"/></td>
                                    <td><t t-esc="loan.borrow_date"/></td>
                                    <td><t t-esc="loan.due_date"/></td>
                                    <td>
                                        <t t-if="loan.status == 'borrowed'">
                                            <span class="badge bg-primary">Borrowed</span>
                                        </t>
                                        <t t-if="loan.status == 'returned'">
                                            <span class="badge bg-success">Returned</span>
                                        </t>
                                        <t t-if="loan.status == 'overdue'">
                                            <span class="badge bg-danger">Overdue</span>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-esc="loan.fine_amount if loan.fine_amount else 0.0"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="not loans">
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        No borrowed books found.
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a t-att-href="'/portal/dashboard'" class="btn btn-primary shadow-sm">
                        <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Custom Table Header CSS -->
            <style>
                .dashboard-table-header {
                    background-color: #e6f3ff;  /* light blue */
                    color: #0d6efd;             /* primary blue text */
                    border-bottom: 2px solid #cce7ff;
                }
                .dashboard-table-header th {
                    font-weight: 600;
                    padding: 12px;
                    font-size: 14px;
                }
                .table tbody tr:hover {
                    background-color: #f2f8ff;  /* subtle hover effect */
                }
            </style>
        </t>
    </template>
</odoo>