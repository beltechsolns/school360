<odoo>
    <template id="portal_student_profile" name="Student Profile Dashboard">
        <t t-call="portal.portal_layout">

            <!-- Bootstrap Icons -->
            <link rel="stylesheet"
                  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>

            <div class="container mt-5">

                <!-- ================= HEADER ================= -->
                <div class="row shadow-sm rounded-4 overflow-hidden mb-4 student-profile-header">

                    <!-- Photo & Basic Info -->
                    <div class="col-md-3 text-center p-4 header-left">
                        <t t-if="student.photo">
                            <img t-att-src="'/web/image/student.student/%s/photo' % student.id"
                                 class="rounded-circle border border-3 border-white mb-3"
                                 style="width:140px; height:140px; object-fit:cover;"
                                 alt="Student Photo"/>
                        </t>
                        <t t-else="">
                            <img src="/school360_portal/static/src/img/placeholder.png"
                                 class="rounded-circle border border-3 border-white mb-3"
                                 style="width:140px; height:140px; object-fit:cover;"
                                 alt="Placeholder"/>
                        </t>

                        <h5 class="fw-bold mb-1">
                            <t t-esc="student.name"/>
                        </h5>

                        <span t-att-class="'badge rounded-pill px-3 py-1 ' +
                            ('bg-primary' if student.status == 'active' else 'bg-secondary')">
                            <t t-esc="student.status.capitalize()"/>
                        </span>
                    </div>

                    <!-- Detailed Info -->
                    <div class="col-md-9 p-4 bg-white">

                        <div class="row mb-3">
                            <div class="col-md-6 mb-2">
                                <i class="bi bi-mortarboard me-2 text-primary"></i>
                                <strong>Grade:</strong>
                                <t t-esc="student.grade_id.name if student.grade_id else 'Not Assigned'"/>
                            </div>

                            <div class="col-md-6 mb-2">
                                <i class="bi bi-layout-sidebar me-2 text-primary"></i>
                                <strong>Section:</strong>
                                <t t-esc="student.section_id.name if student.section_id else 'Not Assigned'"/>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-2">
                                <i class="bi bi-card-text me-2 text-primary"></i>
                                <strong>Student ID:</strong>
                                <t t-esc="student.student_id"/>
                            </div>

                            <div class="col-md-6 mb-2">
                                <i class="bi bi-hash me-2 text-primary"></i>
                                <strong>Admission No:</strong>
                                <t t-esc="student.admission_number"/>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-2">
                                <i class="bi bi-calendar-day me-2 text-primary"></i>
                                <strong>Age:</strong>
                                <t t-esc="student.age"/>
                            </div>

                            <div class="col-md-6 mb-2">
                                <i class="bi bi-gender-ambiguous me-2 text-primary"></i>
                                <strong>Gender:</strong>
                                <t t-esc="student.gender.capitalize()"/>
                            </div>
                        </div>

                        <!-- Guardians -->
                        <t t-if="student.guardian_ids">
                            <div class="mb-2">
                                <i class="bi bi-people me-2 text-primary"></i>
                                <strong>Guardians:</strong>
                                <div class="mt-2">
                                    <t t-foreach="student.guardian_ids" t-as="g">
                                        <span class="badge bg-light text-dark border me-1 py-1 px-2">
                                            <t t-esc="g.name"/>
                                        </span>
                                    </t>
                                </div>
                            </div>
                        </t>

                        <!-- Notes -->
                        <t t-if="student.notes">
                            <div class="mt-3">
                                <i class="bi bi-stickies me-2 text-primary"></i>
                                <strong>Notes:</strong>
                                <p class="mt-1 mb-0 text-muted">
                                    <t t-esc="student.notes"/>
                                </p>
                            </div>
                        </t>

                    </div>
                </div>

                <!-- ================= QUICK ACTIONS ================= -->
                <div class="d-flex flex-wrap gap-2 mb-4">

                    <a t-att-href="'/portal/student/%s/attendance' % student.id"
                       class="btn btn-outline-primary rounded-pill px-3 shadow-sm">
                        <i class="bi bi-check2-square me-1"></i>Attendance
                    </a>

                    <a t-att-href="'/portal/student/%s/fees' % student.id"
                       class="btn btn-outline-primary rounded-pill px-3 shadow-sm">
                        <i class="bi bi-cash-stack me-1"></i>Fees
                    </a>

                    <a t-att-href="'/portal/student/%s/library' % student.id"
                       class="btn btn-outline-primary rounded-pill px-3 shadow-sm">
                        <i class="bi bi-book me-1"></i>Library
                    </a>

                    <a t-att-href="'/portal/student/%s/admission' % student.id"
                       class="btn btn-outline-primary rounded-pill px-3 shadow-sm">
                        <i class="bi bi-file-text me-1"></i>Admission
                    </a>

                    <a t-att-href="'/portal/dashboard'"
                       class="btn btn-dark rounded-pill px-3 shadow-sm">
                        <i class="bi bi-arrow-left me-1"></i>Back
                    </a>

                </div>

            </div>

            <!-- ================= STYLES ================= -->
            <style>
                .student-profile-header {
                    background-color: #e6f3ff;  /* light blue dashboard header */
                }

                .header-left {
                    background-color: #cce7ff;  /* lighter left column */
                }

                .student-profile-header strong {
                    font-weight: 600;
                }

                .btn-outline-primary {
                    color: #0d6efd;
                    border-color: #0d6efd;
                }

                .btn-outline-primary:hover {
                    background-color: #0d6efd;
                    color: white;
                }
            </style>

        </t>
    </template>
</odoo>