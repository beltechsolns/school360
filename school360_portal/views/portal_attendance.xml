<odoo>
    <template id="portal_student_attendance" name="Student Attendance">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h3 class="mb-4 fw-bold" style="color: #0d6efd;">
                    Attendance History - <t t-esc="student.name"/>
                </h3>

                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-striped table-bordered table-hover align-middle">
                        <!-- Custom Light-Blue Header -->
                        <thead class="dashboard-table-header">
                            <tr>
                                <th>Date</th>
                                <th>Subject</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="attendance" t-as="att">
                                <tr>
                                    <td><t t-esc="att.date"/></td>
                                    <td><t t-esc="att.subject_id.name if att.subject_id else 'N/A'"/></td>
                                    <td>
                                        <t t-if="att.status == 'present'">
                                            <span class="badge bg-success">Present</span>
                                        </t>
                                        <t t-if="att.status == 'absent'">
                                            <span class="badge bg-danger">Absent</span>
                                        </t>
                                        <t t-if="att.status not in ['present','absent']">
                                            <span class="badge bg-secondary"><t t-esc="att.status"/></span>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="not attendance">
                                <tr>
                                    <td colspan="3" class="text-center text-muted">
                                        No attendance records found.
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a t-att-href="'/portal/dashboard'" class="btn btn-primary shadow-sm">
                        <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Custom Table Header CSS -->
            <style>
                .dashboard-table-header {
                    background-color: #e6f3ff;  /* light blue */
                    color: #0d6efd;             /* primary blue text */
                    border-bottom: 2px solid #cce7ff;
                }
                .dashboard-table-header th {
                    font-weight: 600;
                    padding: 12px;
                    font-size: 14px;
                }
                .table tbody tr:hover {
                    background-color: #f2f8ff;  /* subtle hover effect */
                }
            </style>
        </t>
    </template>
</odoo>