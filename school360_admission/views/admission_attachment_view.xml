<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_student_admission_attachment_form" model="ir.ui.view">
            <field name="name">admission.attachment.form</field>
            <field name="model">student.admission.attachment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="admission_id"/>
                            <field name="description"/>
                            <field name="file" filename="description"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="student_admission_attachment_list_view" model="ir.ui.view">
            <field name="name">admission.attachment.list</field>
            <field name="model">student.admission.attachment</field>
            <field name="arch" type="xml">
                <list>
                    <field name="admission_id"/>
                    <field name="description"/>
                    <field name="file" filename="description"/>
                </list>
            </field>
        </record>

        <record id="action_student_admission_attachment" model="ir.actions.act_window">
            <field name="name">Admission Attachment</field>
            <field name="res_model">student.admission.attachment</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>