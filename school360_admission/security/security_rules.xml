<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="student_admission_comp_rule" model="ir.rule">
            <field name="name">Student Admission Multi-Company</field>
            <field name="model_id" ref="model_student_admission"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="student_admission_parent_rule" model="ir.rule">
            <field name="name">Parents: Own Admissions Only</field>
            <field name="model_id" ref="model_student_admission"/>
            <field name="groups" eval="[(4, ref('school360_base.group_school_parent'))]"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
        </record>
    </data>
</odoo>