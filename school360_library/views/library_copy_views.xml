<odoo>
    <!-- Tree View -->
    <record id="view_library_copy_tree" model="ir.ui.view">
        <field name="name">library.copy.tree</field>
        <field name="model">library.copy</field>
        <field name="arch" type="xml">
            <list>
                <field name="book_id"/>
                <field name="copy_number"/>
                <field name="status"/>
                <field name="location"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_copy_form" model="ir.ui.view">
        <field name="name">library.copy.form</field>
        <field name="model">library.copy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="copy_number"/>
                        <field name="status"/>
                        <field name="location"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_copy" model="ir.actions.act_window">
        <field name="name">Library Copies</field>
        <field name="res_model">library.copy</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Book Copy!
            </p>
        </field>
    </record>

</odoo>