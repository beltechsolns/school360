<odoo>
    <!-- Tree View -->
    <record id="view_library_borrow_tree" model="ir.ui.view">
        <field name="name">library.borrow.tree</field>
        <field name="model">library.borrow</field>
        <field name="arch" type="xml">
            <list string="Borrow Records">
                <field name="borrower_type"/>
                <field name="borrower_student_id"/>
                <field name="borrower_employee_id"/>
                <field name="book_copy_id"/>
                <field name="borrow_date"/>
                <field name="due_date"/>
                <field name="status"/>
                <field name="fine_amount"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_borrow_form" model="ir.ui.view">
        <field name="name">library.borrow.form</field>
        <field name="model">library.borrow</field>
        <field name="arch" type="xml">
            <form string="Borrow Record">
                <sheet>
                    <group>
                        <group>
                            <field name="borrower_type"/>
                            <field name="borrower_student_id"/>
                            <field name="borrower_employee_id"/>
                            <field name="book_copy_id"/>
                            <field name="borrow_date"/>
                        </group>
                         <group>
                            <field name="due_date"/>
                            <field name="return_date"/>
                            <field name="status" readonly="1"/>
                            <field name="fine_amount" readonly="1"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>

        </field>
    </record>

    <!-- Action -->
    <record id="action_library_borrow" model="ir.actions.act_window">
        <field name="name">Borrow Records</field>
        <field name="res_model">library.borrow</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Borrow Record!
            </p>
        </field>
    </record>
</odoo>