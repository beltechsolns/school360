<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_academic_timetable_tree" model="ir.ui.view">
        <field name="name">school360.academic.timetable.tree</field>
        <field name="model">school360.academic.timetable</field>
        <field name="arch" type="xml">
            <list>
                <field name="day_of_week"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="subject_id"/>
                <field name="grade_id"/>
                <field name="section_id"/>
                <field name="teacher_id"/>
            </list>
        </field>
    </record>

    <record id="view_academic_timetable_form" model="ir.ui.view">
        <field name="name">school360.academic.timetable.form</field>
        <field name="model">school360.academic.timetable</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Schedule">
                            <field name="day_of_week"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                        </group>
                        <group string="Assignment">
                            <field name="grade_id"/>
                            <field name="section_id" domain="[('grade_id', '=', grade_id)]"/>
                            <field name="subject_id" domain="[('grade_id', '=', grade_id)]"/>
                            <field name="teacher_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_academic_timetable_search" model="ir.ui.view">
        <field name="name">school360.academic.timetable.search</field>
        <field name="model">school360.academic.timetable</field>
        <field name="arch" type="xml">
            <search>
                <field name="subject_id"/>
                <field name="teacher_id"/>
                <field name="grade_id"/>
                <filter string="Monday" name="monday" domain="[('day_of_week', '=', '0')]"/>
                <group expand="0" string="Group By">
                    <filter string="Day" name="group_by_day" context="{'group_by': 'day_of_week'}"/>
                    <filter string="Grade" name="group_by_grade" context="{'group_by': 'grade_id'}"/>
                    <filter string="Teacher" name="group_by_teacher" context="{'group_by': 'teacher_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>