<odoo>
    <!-- Top level Academic Menu -->
    <menuitem id="menu_school360_academic_root" 
              name="Academics" 
              parent="school360.school360_menu_root" 
              sequence="10"/>

    <!-- Academic Structure -->
    <menuitem id="menu_academic_structure" name="Structure" parent="menu_school360_academic_root" sequence="10"/>
    
    <menuitem id="menu_academic_grade" name="Grades &amp; Sections" 
              parent="menu_academic_structure" action="action_school360_grade" sequence="10"/>

    <!-- Subjects Action & Menu -->
    <record id="action_school360_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school360.academic.subject</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_academic_subject" name="Subjects" 
              parent="menu_academic_structure" action="action_school360_subject" sequence="20"/>

    <!-- Timetable Action & Menu -->
    <record id="action_school360_timetable" model="ir.actions.act_window">
        <field name="name">Timetable</field>
        <field name="res_model">school360.academic.timetable</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_academic_timetable" name="Timetable" 
              parent="menu_school360_academic_root" action="action_school360_timetable" sequence="30"/>
</odoo>