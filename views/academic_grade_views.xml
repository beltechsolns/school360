<odoo>
    <record id="view_school360_grade_list" model="ir.ui.view">
        <field name="name">school360.academic.grade.list</field>
        <field name="model">school360.academic.grade</field>
        <field name="arch" type="xml">
            <list string="Grades">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_school360_grade_form" model="ir.ui.view">
        <field name="name">school360.academic.grade.form</field>
        <field name="model">school360.academic.grade</field>
        <field name="arch" type="xml">
            <form string="Grade">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sections" name="sections">
                            <field name="section_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="class_teacher_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school360_grade" model="ir.actions.act_window">
        <field name="name">Grades</field>
        <field name="res_model">school360.academic.grade</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>