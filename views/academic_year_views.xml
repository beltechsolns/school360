<odoo>
    <record id="view_school360_academic_year_form_inherit" model="ir.ui.view">
        <field name="name">school360.academic.year.form.inherit</field>
        <field name="model">school360.academic.year</field>
        <field name="inherit_id" ref="school360.view_school360_academic_year_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Terms" name="terms">
                        <field name="term_ids">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>