<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_academic_term_tree" model="ir.ui.view">
        <field name="name">school360.academic.term.list</field>
        <field name="model">school360.academic.term</field>
        <field name="arch" type="xml">
            <list decoration-info="active == True">
                <field name="name"/>
                <field name="academic_year_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_academic_term_form" model="ir.ui.view">
        <field name="name">school360.academic.term.form</field>
        <field name="model">school360.academic.term</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="academic_year_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>