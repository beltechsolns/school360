<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_academic_section_list" model="ir.ui.view">
        <field name="name">school360.academic.section.list</field>
        <field name="model">school360.academic.section</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="grade_id"/>
                <field name="class_teacher_id"/>
            </list>
        </field>
    </record>

    <record id="view_academic_section_form" model="ir.ui.view">
        <field name="name">school360.academic.section.form</field>
        <field name="model">school360.academic.section</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="grade_id"/>
                            <field name="class_teacher_id"/>
                            <field name="company_id" invisible="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>