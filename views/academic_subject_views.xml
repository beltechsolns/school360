<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_academic_subject_tree" model="ir.ui.view">
        <field name="name">school360.academic.subject.tree</field>
        <field name="model">school360.academic.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="grade_id"/>
                <field name="credits"/>
            </list>
        </field>
    </record>

    <record id="view_academic_subject_form" model="ir.ui.view">
        <field name="name">school360.academic.subject.form</field>
        <field name="model">school360.academic.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="credits"/>
                        </group>
                        <group>
                            <field name="grade_id"/>
                            <field name="section_id" domain="[('grade_id', '=', grade_id)]"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Teachers" name="teachers">
                            <field name="teacher_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>