<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_school360_academic_year_list" model="ir.ui.view">
        <field name="name">academic.year.list</field>
        <field name="model">school360.academic.year</field>
        <field name="arch" type="xml">
            <list string="Academic Year"
                  decoration-success="state == 'active'"
                  decoration-info="state == 'draft'"
                  decoration-muted="state == 'closed'">
                <field name="name"/>
                <field name="code" optional="show"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       decoration-danger="state == 'closed'"/>
            </list>
        </field>
    </record>

    <record id="view_school360_academic_year_form" model="ir.ui.view">
        <field name="name">academic.year.form</field>
        <field name="model">school360.academic.year</field>
        <field name="arch" type="xml">
            <form string="Academic Year">
                <header>
                    <button name="action_activate" string="Activate" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_close" string="Close Year" type="object"
                            class="btn-danger"
                            invisible="state != 'active'"
                            confirm="This will permanently lock this Academic Year. You will NOT be able to reopen or edit it. Proceed?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed"/>
                </header>
                <sheet>
                    <group readonly="state == 'closed'">
                        <group>
                            <field name="name" placeholder="e.g. 2025-2026"/>
                            <field name="code"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_school360_academic_year_search" model="ir.ui.view">
        <field name="name">academic.year.search</field>
        <field name="model">school360.academic.year</field>
        <field name="arch" type="xml">
            <search string="Search Academic Year">
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active_state" domain="[('state', '=', 'active')]"/>
                <filter string="Draft" name="draft_state" domain="[('state', '=', 'draft')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="School" name="group_by_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_school360_academic_year" model="ir.actions.act_window">
        <field name="name">Academic Years</field>
        <field name="res_model">school360.academic.year</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>