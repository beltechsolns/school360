<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_student_student_form" model="ir.ui.view">
            <field name="name">student.student.form</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_activate" string="Activate" type="object"
                                class="btn-primary"
                                invisible="status != 'draft'"/>
                        <button name="action_transfer" string="Transfer" type="object"
                                class="btn-warning"
                                invisible="status != 'active'"/>
                        <button name="action_graduate" string="Graduate" type="object"
                                class="btn-success"
                                invisible="status != 'active'"/>
                        <button name="action_drop" string="Drop" type="object"
                                class="btn-danger"
                                invisible="status != 'active'"
                                confirm="Are you sure you want to drop this student?"/>
                        <field name="status" widget="statusbar"
                               statusbar_visible="draft,active,transferred,graduated,dropped"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_enrollments" type="object"
                                    class="oe_stat_button" icon="fa-calendar"
                                    invisible="enrollment_count == 0">
                                <field name="enrollment_count" widget="statinfo"
                                       string="Enrollments"/>
                            </button>
                            <button name="action_view_guardians" type="object"
                                    class="oe_stat_button" icon="fa-users"
                                    invisible="guardian_count == 0">
                                <field name="guardian_count" widget="statinfo"
                                       string="Guardians"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Student Full Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="student_id" readonly="1" groups="school360_base.group_school_administrator"/>
                                <field name="admission_number" readonly="1" groups="school360_base.group_school_administrator"/>
                                <field name="admission_id" groups="school360_base.group_school_administrator"/>
                                <field name="partner_id"/>
                                <field name="date_of_birth"/>
                                <field name="age" readonly="1"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="grade_id"/>
                                <field name="section_id"/>
                                <field name="photo" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Guardians" name="guardians">
                                <field name="guardian_line_ids">
                                    <list editable="bottom">
                                        <field name="guardian_id"/>
                                        <field name="relation_type"/>
                                        <field name="guardian_email" optional="show"/>
                                        <field name="guardian_phone" optional="show"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Enrollment History" name="enrollments">
                                <field name="enrollment_ids">
                                    <list>
                                        <field name="academic_year_id"/>
                                        <field name="grade_id"/>
                                        <field name="section_id"/>
                                        <field name="enrollment_date"/>
                                        <field name="graduation_date"/>
                                        <field name="status" widget="badge"
                                               decoration-success="status == 'active'"
                                               decoration-info="status == 'completed'"
                                               decoration-warning="status == 'transferred'"
                                               decoration-danger="status == 'dropped'"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes"
                                       placeholder="Additional notes about the student..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_student_student_tree" model="ir.ui.view">
            <field name="name">student.student.list</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <list string="Students"
                      decoration-success="status == 'active'"
                      decoration-info="status == 'graduated'"
                      decoration-muted="status == 'dropped'">
                    <field name="student_id"/>
                    <field name="admission_number"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="grade_id"/>
                    <field name="section_id"/>
                    <field name="date_of_birth" optional="hide"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="status" widget="badge"
                           decoration-success="status == 'active'"
                           decoration-warning="status == 'transferred'"
                           decoration-info="status == 'graduated'"
                           decoration-danger="status == 'dropped'"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>
        <record id="view_student_student_search" model="ir.ui.view">
            <field name="name">student.student.search</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <search string="Students">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="admission_number"/>
                    <field name="partner_id"/>
                    <field name="grade_id"/>
                    <field name="section_id"/>
                    <field name="status"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <filter string="Active" name="active"
                            domain="[('status', '=', 'active')]"/>
                    <filter string="Draft" name="draft"
                            domain="[('status', '=', 'draft')]"/>
                    <filter string="Graduated" name="graduated"
                            domain="[('status', '=', 'graduated')]"/>
                    <filter string="Transferred" name="transferred"
                            domain="[('status', '=', 'transferred')]"/>
                    <filter string="Dropped" name="dropped"
                            domain="[('status', '=', 'dropped')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status"
                                context="{'group_by': 'status'}"/>
                        <filter string="Grade" name="group_grade"
                                context="{'group_by': 'grade_id'}"/>
                        <filter string="Section" name="group_section"
                                context="{'group_by': 'section_id'}"/>
                        <filter string="Gender" name="group_gender"
                                context="{'group_by': 'gender'}"/>
                        <filter string="Company" name="group_company"
                                context="{'group_by': 'company_id'}"
                                groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_student_student_kanban" model="ir.ui.view">
            <field name="name">student.student.kanban</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <kanban string="Students">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="grade_id"/>
                    <field name="section_id"/>
                    <field name="status"/>
                    <field name="photo"/>
                    <field name="enrollment_count"/>
                    <field name="guardian_count"/>
                    <templates>
                        <t t-name="card">
                            <div class="d-flex">
                                <field name="photo" widget="image"
                                       class="o_image_64_cover rounded-circle me-3"
                                       options='{"preview_image": "photo"}'/>
                                <div class="flex-grow-1">
                                    <strong><field name="name"/></strong>
                                    <div class="text-muted"><field name="student_id"/></div>
                                    <div>
                                        section: <field name="section_id"/> - grade: <field name="grade_id"/>
                                    </div>
                                    <div class="mt-1">
                                        <field name="status" widget="badge"
                                               decoration-success="status == 'active'"
                                               decoration-info="status == 'graduated'"
                                               decoration-warning="status == 'transferred'"
                                               decoration-danger="status == 'dropped'"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_student_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">student.student</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_student_student_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first student!
                </p>
                <p>
                    Use this form to create and manage student records,
                    including their personal information, enrollment history,
                    and guardian relationships.
                </p>
            </field>
        </record>

    </data>
</odoo>
