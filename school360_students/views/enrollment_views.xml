<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_student_enrollment_form" model="ir.ui.view">
            <field name="name">student.enrollment.form</field>
            <field name="model">student.enrollment</field>
            <field name="arch" type="xml">
                <form string="Student Enrollment">
                    <header>
                        <button name="action_complete" string="Complete" type="object"
                                class="btn-success"
                                invisible="status != 'active'"/>
                        <button name="action_transfer" string="Transfer" type="object"
                                class="btn-warning"
                                invisible="status != 'active'"/>
                        <button name="action_drop" string="Drop" type="object"
                                class="btn-danger"
                                invisible="status != 'active'"
                                confirm="Are you sure you want to drop this enrollment?"/>
                        <field name="status" widget="statusbar"
                               statusbar_visible="active,completed,transferred,dropped"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="student_name" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="student_number" readonly="1"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="student_id" required="1"/>
                                <field name="academic_year_id" required="1"/>
                                <field name="enrollment_date"/>
                                <field name="graduation_date"/>
                            </group>
                            <group>
                                <field name="grade_id" required="1"/>
                                <field name="section_id" required="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes"
                                       placeholder="Additional notes about this enrollment..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_student_enrollment_tree" model="ir.ui.view">
            <field name="name">student.enrollment.list</field>
            <field name="model">student.enrollment</field>
            <field name="arch" type="xml">
                <list string="Student Enrollments">
                    <field name="student_id"/>
                    <field name="student_number"/>
                    <field name="academic_year_id"/>
                    <field name="grade_id"/>
                    <field name="section_id"/>
                    <field name="enrollment_date"/>
                    <field name="graduation_date"/>
                    <field name="status" widget="badge"
                           decoration-success="status == 'active'"
                           decoration-info="status == 'completed'"
                           decoration-warning="status == 'transferred'"
                           decoration-danger="status == 'dropped'"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>


        <record id="view_student_enrollment_search" model="ir.ui.view">
            <field name="name">student.enrollment.search</field>
            <field name="model">student.enrollment</field>
            <field name="arch" type="xml">
                <search string="Student Enrollments">
                    <field name="student_id"/>
                    <field name="student_number"/>
                    <field name="academic_year_id"/>
                    <field name="grade_id"/>
                    <field name="section_id"/>
                    <field name="status"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <filter string="Active" name="active"
                            domain="[('status', '=', 'active')]"/>
                    <filter string="Completed" name="completed"
                            domain="[('status', '=', 'completed')]"/>
                    <filter string="Transferred" name="transferred"
                            domain="[('status', '=', 'transferred')]"/>
                    <filter string="Dropped" name="dropped"
                            domain="[('status', '=', 'dropped')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Student" name="group_student"
                                context="{'group_by': 'student_id'}"/>
                        <filter string="Academic Year" name="group_academic_year"
                                context="{'group_by': 'academic_year_id'}"/>
                        <filter string="Grade" name="group_grade"
                                context="{'group_by': 'grade_id'}"/>
                        <filter string="Section" name="group_section"
                                context="{'group_by': 'section_id'}"/>
                        <filter string="Status" name="group_status"
                                context="{'group_by': 'status'}"/>
                        <filter string="Company" name="group_company"
                                context="{'group_by': 'company_id'}"
                                groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_student_enrollment" model="ir.actions.act_window">
            <field name="name">Student Enrollments</field>
            <field name="res_model">student.enrollment</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_student_enrollment_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first student enrollment!
                </p>
                <p>
                    Track student enrollments across academic years,
                    grades, and sections.
                </p>
            </field>
        </record>

    </data>
</odoo>
