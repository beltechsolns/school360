<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="rule_student_company" model="ir.rule">
            <field name="name">Student: Company Rule</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        </record>

        <record id="rule_enrollment_company" model="ir.rule">
            <field name="name">Enrollment: Company Rule</field>
            <field name="model_id" ref="model_student_enrollment"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        </record>

        <record id="rule_student_parent_portal" model="ir.rule">
            <field name="name">Student: Parent Portal Rule</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="domain_force">[('guardian_ids', 'in', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <record id="rule_enrollment_parent_portal" model="ir.rule">
            <field name="name">Enrollment: Parent Portal Rule</field>
            <field name="model_id" ref="model_student_enrollment"/>
            <field name="domain_force">[('student_id.guardian_ids', 'in', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <record id="rule_guardian_company" model="ir.rule">
            <field name="name">Guardian: Company Rule</field>
            <field name="model_id" ref="model_student_guardian"/>
            <field name="domain_force">[('student_id.company_id', '=', user.company_id.id)]</field>
        </record>

        <record id="rule_guardian_parent_portal" model="ir.rule">
            <field name="name">Guardian: Parent Portal Rule</field>
            <field name="model_id" ref="model_student_guardian"/>
            <field name="domain_force">[('guardian_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</odoo>
